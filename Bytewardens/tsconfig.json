{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "wwwroot/Scripts/",
    "allowSyntheticDefaultImports": true,
    "types": [
      "jquery",
      "bootstrap"
    ]
  },
  "include": [
    "Views/**/*",
    "node_modules"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
